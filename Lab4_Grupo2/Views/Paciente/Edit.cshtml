@model Lab4_Grupo2.Models.Paciente

@{
    ViewData["Title"] = "Modificaciones";
}
<br />
<br />
<h4>Editar paciente</h4>

<h6>Al continuar se modificarán los datos del registro actual.</h6>
<br />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombres" class="control-label"></label>
                <input asp-for="Nombres" class="form-control" />
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellidos" class="control-label"></label>
                <input asp-for="Apellidos" class="form-control" />
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FDNacimiento" class="control-label"></label>
                <input asp-for="FDNacimiento" class="form-control" />
                <span asp-validation-for="FDNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sexo" value="Número de serie" class="control-label"></label>
                <select asp-for="Sexo" class="form-control">
                    <option value="Mn">Masculino</option>
                    <option value="Fm">Femenino</option>
                </select>
                <span asp-validation-for="Sexo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Especializacion" class="control-label"></label>
                <select asp-for="Especializacion" class="form-control">
                    <option value="TI">Traumatología Interna</option>
                    <option value="TE">Traumatología Expuesta</option>
                    <option value="GE">Ginecología</option>
                    <option value="CA">Cardiología</option>
                    <option value="NE">Neumología</option>
                </select>
                <span asp-validation-for="Especializacion" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="MIngreso" value="Método de ingreso" class="control-label"></label>
                <select asp-for="MIngreso" class="form-control">
                    <option value="Ambulancia">Ambulancia</option>
                    <option value="Asistido">Asistido</option>
                </select>
                <span asp-validation-for="MIngreso" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Actualizar paciente" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="SalaEspera">Volver a sala de espera</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
